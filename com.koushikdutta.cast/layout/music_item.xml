<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <ImageView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/boilerplate_list_item_layout_horizontalMargin"
            android:id="@android:id/icon"
            android:layout_width="32dp"
            android:layout_height="32dp"/>

    <FrameLayout
            android:layout_marginLeft="@dimen/boilerplate_list_item_second_column_horizontalMargin"
            android:layout_marginRight="36dp"
            android:layout_width="match_parent"
            android:layout_height="72dp">

        <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

            <com.koushikdutta.boilerplate.TintedTextView
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:id="@android:id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>

            <com.koushikdutta.boilerplate.TintedTextView
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:id="@android:id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <com.koushikdutta.boilerplate.TintedImageView
                app:stateListFilter="normal"
                android:src="@drawable/ic_action_navigation_more_vert"
                android:layout_gravity="center_vertical|right"
                android:id="@+id/music_overflow"
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:layout_height="32dp"/>

        <!--<FrameLayout-->
                <!--android:layout_gravity="bottom"-->
                <!--android:background="#E0E0E0"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"/>-->
    </FrameLayout>
</FrameLayout>
