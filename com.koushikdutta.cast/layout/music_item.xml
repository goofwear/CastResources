<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <com.makeramen.RoundedImageView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/boilerplate_list_item_layout_horizontalMargin"
            android:id="@android:id/icon"
            app:riv_oval="true"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

    <FrameLayout
            android:layout_marginLeft="@dimen/boilerplate_list_item_second_column_horizontalMargin"
            android:layout_width="match_parent"
            android:layout_height="72dp">

        <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

            <com.koushikdutta.boilerplate.TintedTextView
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:id="@android:id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>

            <com.koushikdutta.boilerplate.TintedTextView
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:id="@android:id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <FrameLayout
                android:layout_gravity="bottom"
                android:background="#E0E0E0"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
    </FrameLayout>
</FrameLayout>
