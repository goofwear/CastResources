<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AndroidTheme" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="CastTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="largeIconTheme">@style/CastTheme.LargeIcon</item>
        <item name="listHeaderTextColor">@android:color/black</item>
        <item name="ratio">1</item>
        <item name="android:textColorPrimary">#61615E</item>
    </style>

    <style name="CastThemeCandy">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CastAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog">
    </style>

    <style name="CastTheme.LargeIcon">
        <item name="listItemIconSize">@android:dimen/app_icon_size</item>
    </style>

    <style name="Separator">
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#ffcccccc</item>
    </style>

    <style name="VideoTitle" parent="android:style/TextAppearance">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ListItemTitle" parent="android:style/TextAppearance.Medium">
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="CastTheme.PortraitItem">
        <item name="ratio">1.5</item>
    </style>

    <style name="CastTheme.Slideshow">
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>