<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:background="@android:color/black"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            />


    <LinearLayout
            android:elevation="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/icon_list_drawer_activity_statusbar_height"/>

        <android.support.v7.widget.Toolbar
                android:id="@+id/photoswipe_toolbar"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                android:background="@drawable/gradient_fade_to_translucent"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                />
    </LinearLayout>

    <LinearLayout
            android:background="#C0000000"
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

        <LinearLayout
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <com.koushikdutta.boilerplate.TintedImageView
                    app:stateListFilter="inverse"
                    android:id="@+id/stop"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_playback_stop"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="16dp"/>

            <FrameLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                <FrameLayout
                        android:id="@+id/slideshow"
                        android:clickable="true"
                        android:focusable="true"
                        android:visibility="gone"
                        android:background="?android:attr/selectableItemBackground"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize">

                    <ProgressBar
                            android:layout_gravity="center"
                            android:padding="0dp"
                            android:layout_margin="0dp"
                            android:layout_width="match_parent"
                            android:layout_height="?attr/actionBarSize"/>

                    <com.koushikdutta.boilerplate.TintedImageView
                            app:stateListFilter="inverse"
                            android:src="@drawable/ic_playback_pause"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="16dp"/>
                </FrameLayout>

                <ImageButton
                        android:id="@+id/slideshow_image"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_action_images_slideshow"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"/>
            </FrameLayout>

        </LinearLayout>

        <FrameLayout
                android:layout_gravity="center"
                android:id="@+id/ad_holder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</FrameLayout>